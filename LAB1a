#include <stdio.h>
#include <unistd.h>
#include <fcntl.h>

int main()
{
    int fd;
    char buffer[50];

    
    fd = open("sample.txt", O_CREAT | O_RDWR, 0644);

    if (fd < 0)
    {
        printf("File opening failed\n");
        return 1;
    }

   
    write(fd, "Hello OS Lab", 12);

  
    lseek(fd, 0, SEEK_SET);

    read(fd, buffer, 12);

  
    printf("Data read from file: %s\n", buffer);

    
    close(fd);

    return 0;
}
